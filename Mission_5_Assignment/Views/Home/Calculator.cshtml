@{
    ViewData["Title"] = "Lesson Cost Calculator";
}

<div class="text-center">
    <h1 class="display-4">Guitar Lesson Cost Calculator</h1>
    <p>Find out how much your guitar lessons will cost!</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Calculate Your Lesson Cost</h4>
            </div>
            <div class="card-body">
                <form id="calculatorForm">
                    <div class="mb-3">
                        <label for="hours" class="form-label">Number of Hours:</label>
                        <input type="number" id="hours" class="form-control" required min="1" step="0.5" />
                        <div class="invalid-feedback">Please enter a positive number</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="hourlyRate" class="form-label">Hourly Rate:</label>
                        <input type="text" id="hourlyRate" class="form-control" value="$25.00" readonly />
                    </div>
                    
                    <button type="button" id="calculateBtn" class="btn btn-primary">Calculate Total</button>
                    
                    <div class="mt-3">
                        <label for="totalCost" class="form-label">Total Cost:</label>
                        <input type="text" id="totalCost" class="form-control" readonly />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>
}
